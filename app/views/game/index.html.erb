<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
  <div class="row">
    <div class="col-sm-6">
<%= image_tag('hangingman/index.jpg', size:'400x400')%>
</div>
  <div class="col-sm-6">

<div style="padding: 40px">
 <h2>Listing Rankings</h2>
 <table class='table'>
   <thead>
     <tr style="text-align:left;">
       <th>Tries</th>
       <th>Name</th>
     </tr>
   </thead>
   <tbody>
     <% @rankings.each do |ranking| %>
       <tr>
         <td><%= ranking.tries %></td>
         <td><%= ranking.name %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
 <center><h1><%= link_to '[Start]', 'choose_game' %></h1></center>
</div>
</div>
</div>
